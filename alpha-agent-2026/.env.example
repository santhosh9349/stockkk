# Alpha-Agent 2026 Environment Configuration
# Copy this file to .env and fill in your API keys

# === REQUIRED: Data Sources ===
# Alpha Vantage - Stock data (https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# FRED - Macro data (https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your_fred_api_key_here

# === REQUIRED: AI/LLM Provider ===
# Google Gemini API (https://ai.google.dev/)
GEMINI_API_KEY=your_gemini_api_key_here

# === REQUIRED: Notifications ===
# Telegram Bot (create via @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === OPTIONAL: GitHub (auto-provided in Actions) ===
# GITHUB_TOKEN is automatically available in GitHub Actions
# For local testing, create a Personal Access Token with 'repo' scope
# GITHUB_TOKEN=your_github_pat_here
# GITHUB_REPOSITORY=owner/repo

# === OPTIONAL: Bloomberg (if available) ===
# BLOOMBERG_API_KEY=your_bloomberg_key_here

# === RUNTIME CONFIG ===
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Pipeline timeout in minutes (default: 25)
PIPELINE_TIMEOUT_MINUTES=25

# === DATA PATHS ===
# Portfolio file location (relative to project root)
PORTFOLIO_PATH=data/portfolio.json

# NYSE holiday calendar
HOLIDAYS_PATH=data/nyse_holidays_2026.json
